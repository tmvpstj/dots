### settings ###
borderwidth 0
gap 0 0 0 0
sticky yes
unbind-key all
moveamount 10
fontname "Fantasque Sans Mono:size=10"

## execs ##
bind-key 4-Return	"st"
bind-key 4S-Return	"drawterm"
bind-key 4-d		"rofi -show drun"
bind-key 4-e		"pcmanfm"
bind-key C-Print	"scr"
bind-key 4M-t		"datenoti"
bind-key 4M-v		"vol"
bind-key XF86AudioRaiseVolume	"vol i 5"
bind-key XF86AudioLowerVolume	"vol d 5"
bind-key XF86AudioMute		"vol m"

## colors ##
color activeborder 	"#afb0e8"
color inactiveborder	"#0e0e0e"
color font		"#afb0e8"
color selfont		"#80a7d6"
color menufg		"#f8f8f8"
color menubg		"#0e0e0e"

## keybinds ##
bind-key M-Tab      window-cycle
bind-key 4-Tab      group-cycle

bind-key 4-f        window-maximize
bind-key 4-space    window-fullscreen
bind-key 4-o        window-snap-left
bind-key 4-p        window-snap-right 
bind-key 4-q        window-close

bind-key 4S-b       window-vmaximize
bind-key 4S-r       restart
bind-key 4S-e       quit
bind-key 4C-h	    window-hide
bind-key 4-a	    window-stick
bind-key 4S-i	    menu-window


## resize
bind-key 4S-h window-resize-left
bind-key 4S-j window-resize-down
bind-key 4S-k window-resize-up
bind-key 4S-l window-resize-right
bind-key 4-h window-move-left-big
bind-key 4-j window-move-down-big
bind-key 4-k window-move-up-big
bind-key 4-l window-move-right-big

## groups ##
bind-key 4-1 group-only-1
bind-key 4-2 group-only-2
bind-key 4-3 group-only-3
bind-key 4-4 group-only-4
bind-key 4-5 group-only-5
bind-key 4-6 group-only-6
bind-key 4S-1 window-movetogroup-1
bind-key 4S-2 window-movetogroup-2
bind-key 4S-3 window-movetogroup-3
bind-key 4S-4 window-movetogroup-4
bind-key 4S-5 window-movetogroup-5
bind-key 4S-6 window-movetogroup-6
bind-key 4C-1 group-toggle-1
bind-key 4C-2 group-toggle-2
bind-key 4C-3 group-toggle-3
bind-key 4C-4 group-toggle-4
bind-key 4C-5 group-toggle-5
bind-key 4C-6 group-toggle-6

## mousebinds
unbind-mouse all

bind-mouse 4-3 window-resize
bind-mouse 4-1 window-move
bind-mouse 4-2 window-lower
